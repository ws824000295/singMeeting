body {
  width: 100%;
  background: url('../../../images/fuli/become/bg.png') no-repeat top center;
  background-size: 100%;
  height:auto;
  overflow:hidden;
}

.user-info {
  text-align: center;
  width: 100%;
  height: auto;
  overflow: hidden;
  padding-top: 0.4rem;
}

.avatar {
  width: 1.467rem;
  height: 1.467rem;
  border: 0.05rem solid #fff;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto;
  margin-top: 0.1rem;
}

.avatar img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-name {
  color: #fff;
  font-size: 0.427rem;
  margin-top: 0.2rem;
}
.level{
  width: 1.96rem;
  height: 0.573rem;
  border-radius:0.27rem;
  margin: 0 auto;
  color: #999;
  font-size: 0.27rem;
  line-height: 0.573rem; 
  background: url('../../../images/fuli/become/golden.png') no-repeat center;
  background-size: 100%;
  text-align: right;
  padding-right: 0.24rem;
  margin-top: 0.17rem;
}
.become-item {
  width: 8.53rem;
  height: auto;
  margin: 0 auto;
  margin-top: 0.27rem;
  overflow: hidden;
  background: #fff;
  border-radius: 0.2rem;
  padding: 0.45rem 0.93rem;
  text-align: center;
}

.title {
  color: #333;
  font-size: 0.37rem;
  font-weight: 700;
}

.title .left, .title .right {
  width: 0.747rem;
  height: 0.27rem;
  vertical-align: middle;
  margin: 0 0.27rem;
}

.text-black {
  color: #333;
  font-size: 0.35rem;
  font-weight: 700;
  margin-top: 0.27rem;
}

.text-gray {
  font-size: 0.27rem;
  color: #999;
  margin-top: 0.33rem;
  line-height: 0.427rem;
}

.icon-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 0.32rem;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  margin: 0.33rem 0 0.27rem;
}

.introduce .icon-item:nth-child(1) .icon {
  width: 1.72rem;
  height: 1.45rem;
  background: url('../../../images/fuli/become/1.png') no-repeat center;
  background-size: 100%;
}

.introduce .icon-item:nth-child(2) .icon {
  width: 1.6rem;
  height: 1.45rem;
  background: url('../../../images/fuli/become/2.png') no-repeat center;
  background-size: 100%;
}

.introduce .icon-item:nth-child(3) .icon {
  width: 1.37rem;
  height: 1.45rem;
  background: url('../../../images/fuli/become/3.png') no-repeat center;
  background-size: 100%;
}

.how .icon-item:nth-child(1) .icon {
  width: 0.72rem;
  height: 1.02rem;
  background: url('../../../images/fuli/become/4.png') no-repeat center;
  background-size: 100%;
}

.how .icon-item:nth-child(3) .icon {
  width: .87rem;
  height: 1.02rem;
  background: url('../../../images/fuli/become/5.png') no-repeat center;
  background-size: 100%;
}

.how .icon-item:nth-child(5) .icon {
  width: 0.72rem;
  height: 1.02rem;
  background: url('../../../images/fuli/become/6.png') no-repeat center;
  background-size: 100%;
}

.arrow {
  width: 0.7rem;
  height: 0.6rem;
  background: url('../../../images/fuli/become/arrow.png') no-repeat center;
  background-size: 100%;
}
.why .icon-item .icon{
  width: 0.84rem;
  height: 0.84rem;
}
.why .icon-item:nth-child(1) .icon {
  background: url('../../../images/fuli/become/7.png') no-repeat center;
  background-size: 100%;
}

.why .icon-item:nth-child(2) .icon {
  background: url('../../../images/fuli/become/8.png') no-repeat center;
  background-size: 100%;
}

.why .icon-item:nth-child(3) .icon {
  background: url('../../../images/fuli/become/9.png') no-repeat center;
  background-size: 100%;
}
.why .icon-item:nth-child(4) .icon {
  background: url('../../../images/fuli/become/10.png') no-repeat center;
  background-size: 100%;
}
.iWant-btn{
  width: 8.7rem;
  height: 1.84rem;
  background: url('../../../images/fuli/become/btn.png') no-repeat center;
  background-size: 100%;
  font-size: 0.427rem;
  font-weight: 700;
  color: #f76149;
  text-align: center;
  line-height: 1.72rem;
  margin-top: 0.13rem;
  position: fixed;
  bottom: 0;
  left: 50%;
  margin-left: -4.35rem;
}